{
  "name": "@eslint-stylistic/monorepo",
  "version": "0.0.4",
  "private": true,
  "packageManager": "pnpm@8.7.6",
  "license": "MIT",
  "scripts": {
    "build": "pnpm -r run build",
    "dev": "pnpm -r --parallel run dev",
    "stub": "pnpm -r --parallel run stub",
    "lint": "eslint . --cache",
    "update": "esno scripts/prepare.ts",
    "release": "bumpp -r && pnpm -r publish",
    "test": "vitest",
    "typecheck": "tsc --noEmit",
    "prepare": "simple-git-hooks",
    "docs": "pnpm -C docs run docs:dev",
    "docs:build": "pnpm -C docs run docs:build"
  },
  "devDependencies": {
    "@antfu/eslint-config": "^0.43.1",
    "@antfu/ni": "^0.21.8",
    "@antfu/utils": "^0.7.6",
    "@rollup/plugin-commonjs": "^25.0.4",
    "@stylistic/eslint-plugin-js": "workspace:*",
    "@stylistic/eslint-plugin-migrate": "workspace:*",
    "@stylistic/eslint-plugin-ts": "workspace:*",
    "@types/eslint": "^8.44.3",
    "@types/fs-extra": "^11.0.2",
    "@types/node": "^20.6.5",
    "bumpp": "^9.2.0",
    "eslint": "^8.50.0",
    "esno": "^0.17.0",
    "fast-glob": "^3.3.1",
    "fs-extra": "^11.1.1",
    "lint-staged": "^14.0.1",
    "pnpm": "^8.7.6",
    "rimraf": "^5.0.1",
    "rollup": "^3.29.3",
    "rollup-plugin-esbuild": "^6.0.1",
    "simple-git-hooks": "^2.9.0",
    "typescript": "^5.2.2",
    "unbuild": "^2.0.0",
    "vite": "^4.4.9",
    "vitest": "^0.34.5",
    "vue": "^3.3.4"
  },
  "simple-git-hooks": {
    "pre-commit": "pnpm lint-staged"
  },
  "lint-staged": {
    "*": "eslint --fix"
  }
}
